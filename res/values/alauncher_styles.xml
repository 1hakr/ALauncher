<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="LauncherThemeBlack" parent="LauncherThemeDark">
        <item name="android:colorPrimary">#f222</item>
        <item name="allAppsScrimColor">#f000</item>
        <item name="allAppsNavBarScrimColor">#b000</item>
        <item name="workspaceStatusBarScrim">@null</item>
    </style>
    <style name="GoogleSearchLauncherThemeBlack" parent="@style/LauncherThemeBlack">
        <item name="android:keyboardLayout">@layout/search_container_all_apps_google</item>
    </style>

    <style name="DefaultTheme" parent="@android:style/Theme.Material.Light.NoActionBar">
        <item name="android:colorPrimaryDark">@color/colorAccentSecondary</item>
        <item name="android:colorPrimary">@android:color/transparent</item>
        <item name="android:colorAccent">@color/colorAccent</item>
        <item name="android:colorControlNormal">@color/primary_text_default_material_dark</item>
        <item name="android:colorControlActivated">@color/primary_text_default_material_dark</item>
    </style>

    <style name="ToolbarTheme" parent="@android:style/Theme.Material.Light">
        <item name="android:colorControlNormal">@android:color/white</item>
    </style>

    <style name="TimeoutTheme" parent="@android:style/Theme.Material.NoActionBar" />

    <style name="FullScreenDialogStyle" parent="@android:style/Theme.Material.Dialog">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowBackground">?android:attr/windowBackground</item>
        <item name="android:windowEnterAnimation">@android:anim/fade_in</item>
        <item name="android:windowExitAnimation">@android:anim/slide_out_right</item>
    </style>

    <style name="PreferenceCategoryTheme">
        <item name="android:layout">@layout/preference_category_material</item>
        <item name="android:shouldDisableView">false</item>
        <item name="android:selectable">false</item>
    </style>
</resources>

<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/lean_item_app_icon_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?android:attr/selectableItemBackground"
    android:gravity="center"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/lean_item_app_icon"
        android:layout_width="@dimen/custom_app_icon_size"
        android:layout_height="@dimen/custom_app_icon_size"
        android:layout_margin="@dimen/custom_app_icon_margin"
        tools:src="@mipmap/ic_launcher" />

</LinearLayout>
